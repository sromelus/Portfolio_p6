extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

      
        h1= project[0].project_name

      
        p.lead.text-light
          span= project[0].description

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each language in project[0].languages
            li= language

        a.button.expanded(href=`${project[0].live_link}` target='_blank') Live Demo
        if(project[0].github_link.length)
          a.button.expanded(href=`${project[0].github_link}` target='_blank') GitHub Repo
     
    img.image(src=`/static/${project[0].image_urls[1]}`)
    img.image(src=`/static/${project[0].image_urls[2]}`)
    img.image(src=`/static/${project[0].image_urls[3]}`)
